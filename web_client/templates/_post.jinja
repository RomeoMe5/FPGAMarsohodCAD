<table class="table table-hover">
    <tr>
        <td width="70px">
            <a href="{{ url_for('profile.user', username=post.author.username) }}">
                <img src="{{ post.author.avatar_s }}" />
            </a>
        </td>
        <td>
            <span class="user_popup">
                {{ post.author.username }}
            </span>
        </td>
        <td>
            {{ _('%(when)s', when=moment(post.created_date).fromNow()) }}
        </td>
        <td>
            {{ post.watches }} {{ _('watches') }}
        </td>
        <td>
            <a href="{{ post.link }}">
                <span id="post{{ post.id }}">{{ post.title }}</span>
            </a>
        </td>
    </tr>
</table>
