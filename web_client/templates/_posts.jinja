<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>{{ _("#") }}</th>
                <th>{{ _("Title") }}</th>
                <th>{{ _("Author") }}</th>
                <th>{{ _("Watches") }}</th>
                <th>{{ _("Date") }}</th>
                {%- if post.author == current_user -%}
                    <th>{{ _("Actions") }}</th>
                {%- endif -%}
            </tr>
        </thead>
        <tbody>
        {%- for post in posts -%}
            <tr>
                <td>
                    {{ loop.index }}
                </td> {# index #}
                <td>
                    <a href="{{ post.link }}">
                        <span id="post{{ post.id }}">{{ post.title }}</span>
                    </a>
                </td> {# title + link #}
                <td>
                    <a href="{{ post.author.link }}">
                        <span class="user_popup">
                            {{ post.author.username }}
                        </span>
                    </a>
                </td> {# author username #}
                <td>
                    {{ post.watches }}
                </td> {# watches count #}
                <td>
                    {{ _('%(when)s', when=moment(post.created_date).fromNow()) }}
                </td> {# created timestamp #}
                {%- if post.author == current_user -%}
                    <td>
                        <a href="{{ post.del_link }}">
                            {{ _('edit') }}
                        </a>
                    </td> {# edit / actions #}
                {%- endif -%}
            </tr>
        {%- endfor -%}
        </tbody>
    </table>
</div>
